# JobPilot Configuration Template
# Copy this file to .env and fill in your actual values

# ===== CORE SETTINGS =====
PROJECT_NAME="JobPilot"
ENVIRONMENT="development"  # development, staging, production
LOG_LEVEL="INFO"          # DEBUG, INFO, WARNING, ERROR
DATA_DIR="./data"

# ===== AI PROVIDERS =====
# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Ollama (Local LLM)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2:latest

# ===== VECTOR DATABASES =====
# Qdrant
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your_qdrant_api_key_here

# Pinecone
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment

# ChromaDB
CHROMA_PERSIST_DIRECTORY=./data/chroma

# ===== JOB BOARD APIS =====
# LinkedIn (Official API - requires approval)
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token

# Indeed API
INDEED_PUBLISHER_ID=your_indeed_publisher_id

# Glassdoor API (if available)
GLASSDOOR_PARTNER_ID=your_glassdoor_partner_id
GLASSDOOR_API_KEY=your_glassdoor_api_key

# ===== COMMUNICATION APIS =====
# Gmail API
GMAIL_CLIENT_ID=your_gmail_client_id
GMAIL_CLIENT_SECRET=your_gmail_client_secret
GMAIL_REFRESH_TOKEN=your_gmail_refresh_token

# SendGrid (for email sending)
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=your_email@example.com

# ===== WEB AUTOMATION =====
# Browser Settings
BROWSER_HEADLESS=true
BROWSER_TIMEOUT=30000
BROWSER_USER_AGENT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36"

# Proxy Settings (optional)
PROXY_HOST=
PROXY_PORT=
PROXY_USERNAME=
PROXY_PASSWORD=

# ===== DATABASE =====
# SQLite (default)
DATABASE_URL=sqlite:///./data/jobpilot.db

# PostgreSQL (optional)
# DATABASE_URL=postgresql://user:password@localhost/jobpilot

# ===== RATE LIMITING =====
# Requests per minute for different services
LINKEDIN_RATE_LIMIT=60
INDEED_RATE_LIMIT=100
GLASSDOOR_RATE_LIMIT=50
DEFAULT_RATE_LIMIT=120

# ===== SECURITY =====
# JWT Secret for authentication
JWT_SECRET_KEY=your_super_secret_jwt_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# ===== USER PREFERENCES =====
# Default job search parameters
DEFAULT_LOCATION="Remote"
DEFAULT_RADIUS_MILES=50
DEFAULT_SALARY_MIN=75000
DEFAULT_JOB_TYPES="Full-time,Contract"

# Resume and profile settings
DEFAULT_RESUME_PATH=./data/profiles/default_resume.pdf
DEFAULT_COVER_LETTER_TEMPLATE=./data/profiles/cover_letter_template.txt

# ===== DEVELOPMENT =====
# Debug and testing
DEBUG_MODE=false
MOCK_EXTERNAL_APIS=false
SAVE_SCREENSHOTS=true
SAVE_PAGE_SOURCES=false

# Logging
LOG_FILE=./logs/jobpilot.log
LOG_ROTATION="10 MB"
LOG_RETENTION="30 days"
